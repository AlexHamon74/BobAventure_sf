{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="bg-3">
    {% include 'nav2.html.twig' %}
</div>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div style="max-width: 390px" class="mx-auto fs-5">

        <h1 class="my-5 text-center color-1">Connexion :</h1>
        <div class="mb-3 fs-4">
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        
        <div class="mb-3 fs-4">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="row mb-4">
            <div class="col-6 d-flex justify-content-center">
            <div class="form-check fs-5">
                <input class="form-check-input" type="checkbox" value="" id="form2Example34" name="_remember_me" checked />
                <label class="form-check-label" for="form2Example34"> Se souvenir de moi </label>
            </div>
            </div>

            <div class="col-6 d-flex justify-content-center">
                <a href="">Mot de passe oublié</a>
            </div>
        </div>

        <div class="mb-4">
            <button class="btn btn-lg btn-primary" type="submit" style="min-width: 390px">
                Se connecter
            </button>
        </div>

        <div class="text-center d-flex gap-3 justify-content-center">
            <p class="fs-5">Vous n'avez pas de compte ?</p>
            <a href="">Créer un compte</a>
        </div>

    </div>
</form>
{% endblock %}
