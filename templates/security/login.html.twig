{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section>
{% include 'nav2.html.twig' %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div style="max-width: 440px; background-color: #F8FCFF" class="mx-auto border border-dark-subtle rounded p-4">

            <h1 class="mb-4 text-center">Connexion :</h1>
            {% include 'flash.html.twig' %}

            {# Form email #}
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            {# Form password #}
            <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# Ligne 'Se souvenir de moi' et 'Mot de passe oublié' #}
            <div class="d-flex justify-content-between mb-4">
                <div class="form-check ">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example34" name="_remember_me" checked />
                    <label class="form-check-label" for="form2Example34"> Se souvenir de moi </label>
                </div>
                <a href="{{path('pwd_forgot')}}">Mot de passe oublié</a>
            </div>
            
            {# Bouton 'Se connecter' #}
            <div class="mb-4">
                <button class="btn btn-lg btn-primary w-100" type="submit">
                    Se connecter
                </button>
            </div>

            {# Ligne 'Vous n'avez pas de compte ?' et 'Créer un compte' #}
            <div class="d-flex justify-content-between">
                <p class="fs-6">Vous n'avez pas de compte ?</p>
                <a href=" {{path('app_register')}}">Créer un compte</a>
            </div>

        </div>
    </form>
</section>
{% endblock %}
