{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="header-form">
{% include 'nav2.html.twig' %}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div style="max-width: 390px" class="mx-auto color-3">

            <h1 class="my-4 text-center color-3">Connexion :</h1>
            <div class="mb-3 ">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            <div class="mb-3 ">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="row mb-4">
                <div class="col-6 d-flex justify-content-center">
                <div class="form-check ">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example34" name="_remember_me" checked />
                    <label class="form-check-label" for="form2Example34"> Se souvenir de moi </label>
                </div>
                </div>

                <div class="col-6 d-flex justify-content-center">
                    <a href="" class="color-2">Mot de passe oublié</a>
                </div>
            </div>

            <div class="mb-4">
                <button class="btn btn-lg btn-primary" type="submit" style="min-width: 390px">
                    Se connecter
                </button>
            </div>

            <div class="text-center d-flex gap-3 justify-content-center">
                <p class="fs-6 color-3">Vous n'avez pas de compte ?</p>
                <a href=" {{path('app_register')}} " class="color-2">Créer un compte</a>
            </div>

        </div>
    </form>
</section>
{% endblock %}
